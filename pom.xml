<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<!-- ======================================================
		  Life-cycle information
		 ====================================================== -->

	<groupId>org.github.pamther</groupId>
	<artifactId>pamther</artifactId>
	<version>0.1.0-SNAPSHOT</version>
	<packaging>jar</packaging>

	<properties>
		<java.version>1.6</java.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<github.account>RCBiczok</github.account>
	</properties>

	<dependencies>
		<dependency>
			<groupId>net.java.dev.jna</groupId>
			<artifactId>jna</artifactId>
			<version>3.2.7</version>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.8.2</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<!-- === maven-compiler-plugin ============================
				  Compile all kind of classes with the same Java version 
				 ====================================================== -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>${java.version}</source>
					<target>${java.version}</target>
				</configuration>
			</plugin>
			<!-- === maven-source-plugin ==============================
				  Generate source artifact in the same type with the
				  normal artifact 
				 ====================================================== -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<version>2.1.2</version>
				<executions>
					<execution>
						<id>attach-sources</id>
						<phase>verify</phase>
						<goals>
							<goal>jar-no-fork</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<reporting>
		<plugins>
			<!-- === maven-checkstyle-plugin ==========================
			 	  Validate source code against coding style rules and 
			 	  save result as part of report
				 ====================================================== -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-checkstyle-plugin</artifactId>
				<version>2.7</version>
				<configuration>
					<configLocation>config/codingstyle/checkstyle.xml</configLocation>
				</configuration>
			</plugin>
			<!-- === maven-javadoc-plugin ***==========================
			 	  Produce javadoc as part of report.
				 ====================================================== -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.8</version>
			</plugin>
		</plugins>
	</reporting>

	<!-- ======================================================
		  Meta information
		 ====================================================== -->

	<name>PAMther</name>
	<description>${project.name} - PAM authentication library for Java</description>
	<inceptionYear>2011</inceptionYear>

	<developers>
		<developer>
			<id>${github.account}</id>
			<name>Rudolf Biczok</name>
			<email>rcbiczok@gmail.com</email>
			<timezone>+1</timezone>
		</developer>
	</developers>

	<licenses>
		<license>
			<name>Apache License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0</url>
		</license>
	</licenses>

	<scm>
		<connection>scm:git:git://github.com/${github.account}/${project.name}.git</connection>
		<developerConnection>scm:git:git@github.com:${github.account}/${project.name}.git</developerConnection>
		<url>https://${github.account}@github.com/${github.account}/${project.name}.git</url>
	</scm>

</project>
